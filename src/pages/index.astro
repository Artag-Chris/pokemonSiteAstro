---
import MainLayout from "../layout/MainLayout.astro";
import type { PokemonListResponse } from "../interfaces/pokemonList";
import PokemonCard from "../components/pokemon/PokemonCard.astro";
const resp = await fetch("https://pokeapi.co/api/v2/pokemon");
const data = (await resp.json()) as PokemonListResponse;
//console.log("ðŸš€ ~ data:", data);
---

<MainLayout title="Pokemon static | Home" texto="Home Page">
  <h1 class="text-3xl">Listado de Pokemon</h1>
  <hr />
  <section
    aria-label="Listado de Pokemons"
    class="grid grid-cols-1 sm:grid-cols-4 md:grid-cols-5 gap-4"
  >
    {
      data.results.map((pokemon) => (
        <PokemonCard name={pokemon.name} url={pokemon.url} />
      ))
    }
  </section>
</MainLayout>
